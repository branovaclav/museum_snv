					<path d="M0,34 C-18.778,34 -34,18.778 -34,0 C-34,-18.778 -18.778,-34 0,-34 C18.778,-34 34,-18.778 34,0 C34,18.778 18.778,34 0,34 Z M0,18 C9.941,18 18,9.941 18,0 C18,-9.941 9.941,-18 0,-18 C-9.941,-18 -18,-9.941 -18,0 C-18,9.941 -9.941,18 0,18 Z"></path>
				</clipPath>
			</defs>
			<% for (let poi of pois) { %>
				<g class="poi grp_<%= poi.group %>" data-poi="<%= poi.$loki %>" data-group="<%= poi.group %>" data-region="<%= poi.region %>" data-position="<%= poi.position.left %>,<%= poi.position.top %>" transform="translate(<%= poi.position.left %> <%= poi.position.top %>) scale(1)">
					<circle class="bkg" x="0" y="0" r="35" />
					<circle class="beacon colored stroke" x="0" y="0" r="26" />
					<g class="point colored fill" clip-path="url(#svg-clip)">
						<circle x="0" y="0" r="34" />
						<circle x="0" y="0" r="26" />
					</g>
				</g>
			<% } %>
		</svg>
