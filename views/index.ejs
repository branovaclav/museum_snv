			<% for (let map in maps) { %>
				<li>
					<a class="item map_<%= map %>" data-map="<%= map %>" data-groups="<%= maps[map].groups.join(',') %>">
						<div class="title"><%= maps[map].title[lang] %></div>
						<div class="subtitle"><%= maps[map].subtitle[lang] %></div>
					</a>
				</li>
			<% } %>
